/* pages/linJuan/linJuan.wxss */
/* 整体 */
.linJuan{
  width: 100%;
  height: 100%;
  position: relative;
}
page{
  height: 100%;
}
/* 导航 */
.zi_nav{
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-bottom:1px solid #eee; 
  display: flex;
  justify-content: space-around;
}
.zi_nav>view{
  width:33%;
  height: 40px;
  text-align: center;
  font-size: 16px;
}
.zi_nav>view:nth-child(2){
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}
.zi_xuan{
  width: 100%;
  height: 100%;
}
.active{
  background: #eee;
}
.swiper_con{
   width: 100%;
   height: 100%;
   font-size: 12px;
   text-align: center;
   line-height: 80px;
   color: #ccc;
}
/* 第一个页面 */
.swiper_two{
  height: 464px;
  margin-top: 6px;
  overflow-y:scroll;
}
.swiper_three{
  height: 40px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee; 
  display: flex;
  justify-content: space-between;
}
.swiper_three>input{
  height: 40px;
  padding-left: 10px;
}
.swiper_three>button{
  margin: 0;
  background: #fff;
  border: 1px solid #eee;
  font-weight: normal;
  border-radius: 4px;
}
.swiper_four{
  padding: 0 10px;
  height: auto;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-top: 6px;
}
.swiper_four>view:nth-child(1){
  font-weight: bold;
  height: 40px;
  line-height: 40px;
  border-bottom:1px solid #eee; 
}
.swiper_four>view:nth-child(2){
  color: red;
  /* height: 40px; */
  line-height: 40px;
}
.swiper_four>view:nth-child(3){
  font-size: 12px;
  color: #ccc;
}
.swiper_five{
  display: flex;
  justify-content: space-between;
  height: 20px;
  line-height: 20px;
  margin: 10px 0;
}
.swiper_five>view{
  color: #eee;
  font-size: 10px;
}
.swiper_five>button{
  margin: 0;
  color: #fff;
  background: red;
  font-size: 12px;
  height: 20px;
  line-height: 20px;
}

/* 固定导航 */
.zi_bottom{
  position: fixed;
  right: 0;
  bottom: 40px;
  width: 60px;
  height: 40px;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}
.zi_bottom>image{
  width: 15px;
  height: 15px;
  margin-right: 4px;
  margin-left: 4px;
}
.zi_bottom>view{
  width: 30px;
  height: 30px;
  font-size: 12px;
  text-align: center;
}
/* 出来的那个导航 */
.zi_bottom_one{
  position:fixed;
  bottom: 40px;
  right: 0;
  width: 80%;
  height: 40px;
  /* border: 1px solid #000; */
  display: flex;
  background: #fff;
}
.zi_bottom_one_nav{
  width: 60px;
  height: 40px;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}
.zi_bottom_one_nav>image{
  width: 15px;
  height: 15px;
  margin-right: 4px;
  margin-left: 4px;
}
.zi_bottom_one_nav>text{
  width: 30px;
  height: 30px;
  font-size: 12px;
  text-align: center;
  display: block;
}
.zi_bottom_two{
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
}
.zi_bottom_two_dd{
  width: 25%;
  text-align: center;
}
.zi_bottom_two_dd>image{
  width: 20px;
  height: 20px;
}
.zi_bottom_two_dd>text{
  display: block;
  font-size: 12px;
}
