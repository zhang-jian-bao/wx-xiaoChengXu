/* pages/dingDan/dingDan.wxss */
/* 整体订单页面 */
page{
  height: 100%;
}
.dingDan{
  width: 100%;
  height: 100%;
}
/* 导航 */
.zi_nav{
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-bottom:1px solid #eee; 
  display: flex;
  justify-content: space-around;
}
.zi_nav>view{
  width:33%;
  height: 40px;
  text-align: center;
  font-size: 14px;
}
