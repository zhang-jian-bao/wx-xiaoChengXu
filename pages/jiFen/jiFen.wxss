/* pages/jiFen/jiFen.wxss */
/* 整体布局 */
.jiFen{
  width: 100%;
  height: 100%;
  position: relative;
}
page{
  height: 100%;
}
/* 积分头部 */
.jiFen_head{
  width: 100%;
  height: 80px;
  line-height: 40px;
  background: red;
  color: #fff;
  text-align: center;
  padding: 10px 0;
}
/* 积分内容 */
.jiFen_con{
  height: 60px;
  padding: 10px 20px 10px 10px;
  border-bottom: 1px solid #eee;
  font-size: 12px;
  line-height: 30px;
}
.jiFen_con>view>text{
  float: right;
  color: red;
}
/* 固定导航 */
.zi_bottom{
  position: fixed;
  right: 0;
  bottom: 40px;
  width: 60px;
  height: 40px;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}
.zi_bottom>image{
  width: 15px;
  height: 15px;
  margin-right: 4px;
  margin-left: 4px;
}
.zi_bottom>view{
  width: 30px;
  height: 30px;
  font-size: 12px;
  text-align: center;
}
/* 出来的那个导航 */
.zi_bottom_one{
  position: fixed;
  bottom: 40px;
  right: 0;
  width: 80%;
  height: 40px;
  /* border: 1px solid #000; */
  display: flex;
}
.zi_bottom_one_nav{
  width: 60px;
  height: 40px;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}
.zi_bottom_one_nav>image{
  width: 15px;
  height: 15px;
  margin-right: 4px;
  margin-left: 4px;
}
.zi_bottom_one_nav>text{
  width: 30px;
  height: 30px;
  font-size: 12px;
  text-align: center;
  display: block;
}
.zi_bottom_two{
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
}
.zi_bottom_two_dd{
  width: 25%;
  text-align: center;
}
.zi_bottom_two_dd>image{
  width: 20px;
  height: 20px;
}
.zi_bottom_two_dd>text{
  display: block;
  font-size: 12px;
}
