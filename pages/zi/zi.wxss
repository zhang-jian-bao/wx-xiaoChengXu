/* pages/zi/zi.wxss */
/* 整体 */
.zi{
  width: 100%;
  height: 100%;
  position: relative;
}
/* 头部 */
.zi_head{
  width: 100%;
  height: 120px;
  background: red;
  color: #fff;
}
.zi_head_one{
  height: 60px;
  text-align: center;
  display: flex;
  justify-content: space-around;
  font-size: 14px;
  margin-top: 10px;
  /* border: 1px solid #000; */
  align-items: center;
}
.zi_head_two{
  width: 100%;
  text-align: right;
  height: 40px;
  line-height: 40px;
}
.zi_head_two>text{
  /* display: block; */
  width: auto;
  height: 40px;
  line-height: 50px;
  padding: 0 4px;
  border: 1px solid #fff;
  margin-right: 10px;
  border-radius: 4px;
}
/* 导航 */
.zi_nav{
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-bottom:1px solid #eee; 
  display: flex;
  justify-content: space-around;
}
.zi_nav>view{
  width:33%;
  height: 40px;
  text-align: center;
  font-size: 16px;
}
.zi_nav>view:nth-child(2){
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}
.zi_xuan{
  width: 100%;
  height: 100%;
}
.active{
  background: #eee;
}
.swiper_con{
   width: 100%;
   height: 100%;
   font-size: 12px;
   text-align: center;
   line-height: 80px;
   color: #ccc;
}
/* 固定导航 */
.zi_bottom{
  position: fixed;
  right: 0;
  bottom: 40px;
  width: 60px;
  height: 40px;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}
.zi_bottom>image{
  width: 15px;
  height: 15px;
  margin-right: 4px;
  margin-left: 4px;
}
.zi_bottom>view{
  width: 30px;
  height: 30px;
  font-size: 12px;
  text-align: center;
}
/* 出来的那个导航 */
.zi_bottom_one{
  position:fixed;
  bottom: 40px;
  right: 0;
  width: 80%;
  height: 40px;
  /* border: 1px solid #000; */
  display: flex;
}
.zi_bottom_one_nav{
  width: 60px;
  height: 40px;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}
.zi_bottom_one_nav>image{
  width: 15px;
  height: 15px;
  margin-right: 4px;
  margin-left: 4px;
}
.zi_bottom_one_nav>text{
  width: 30px;
  height: 30px;
  font-size: 12px;
  text-align: center;
  display: block;
}
.zi_bottom_two{
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
}
.zi_bottom_two_dd{
  width: 25%;
  text-align: center;
}
.zi_bottom_two_dd>image{
  width: 20px;
  height: 20px;
}
.zi_bottom_two_dd>text{
  display: block;
  font-size: 12px;
}

